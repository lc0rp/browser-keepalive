{
  "name": "browser-keepalive",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "bin": {
    "browser-keepalive": "./src/cli.js"
  },
  "scripts": {
    "start": "node ./src/cli.js",
    "build": "mkdir -p dist && esbuild ./src/cli.js --bundle --platform=node --format=esm --outfile=dist/cli.js --external:playwright --external:puppeteer --external:commander && chmod +x dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "node -c ./src/cli.js && node -c ./src/engines.js"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.20.2",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "commander": "^14.0.2"
  }
}
